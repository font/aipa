# API Keys
OPENAI_API_KEY=your_openai_api_key_here
LLAMA_STACK_API_KEY=your_llama_stack_api_key_here

# LLM settings
LLM_PROVIDER=openai  # Options: openai, llama, llama_stack
LLM_MODEL=gpt-4o
EMBEDDING_PROVIDER=openai  # Options: openai, sentence_transformers, llama_stack
EMBEDDING_MODEL=text-embedding-3-small

# Llama model settings (only needed if LLM_PROVIDER=llama)
LLAMA_MODEL_PATH=models/llama-3-8b-instruct.gguf
LLAMA_N_CTX=4096
LLAMA_N_GPU_LAYERS=0  # Set to higher number to use GPU acceleration

# Sentence Transformers settings (only needed if EMBEDDING_PROVIDER=sentence_transformers)
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Llama Stack Client settings (only needed if LLM_PROVIDER=llama_stack or EMBEDDING_PROVIDER=llama_stack)
LLAMA_STACK_CLIENT_URL=http://localhost:11434
LLAMA_STACK_CLIENT_PROVIDER=ollama  # Options: ollama, vllm
LLAMA_STACK_CLIENT_MODEL=llama3
LLAMA_STACK_CLIENT_TIMEOUT=120
LLAMA_STACK_CLIENT_EMBEDDING_MODEL=nomic-embed-text

# Llama Stack integration
LLAMA_STACK_BASE_URL=https://api.llama-stack.com
SHIELD_RESOURCE_ID=your_shield_resource_id_here

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true 